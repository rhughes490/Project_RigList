<h1>Rigs</h1>

<p class="btn--wrapper">
  <a class="btn btn--action" href="/rigs/new">Add a rig</a>
</p>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th>Type</th>
    <th></th>
    <th>Distance</th>
    <th></th>
    <th>Country</th>
    <th></th>
    <th>Oil Company</th>
  </tr>
  <% for rig in @rigs %>
  <tr>
    <td><a href="/rigs/<%= rig.id %>"><%= rig.name %></a></td>
    <td>|</td>
    <td><%= rig.type %></td>
    <td>|</td>
    <td><%= rig.distance %> miles</td>
    <td>|</td>
    <td><%= rig.country %></td>
    <td>|</td>
    <td><%= rig.oil_company.name.capitalize %></td>
  </tr>
  <% end %>
</table>