<h2>Add a rig</h2>
<form method="POST" action="/rigs">
  <div class="form-wrapper">
    
    <div class="form-el">
      <label for="name">Name:</label>
      <input type="text" name="name" id="name"/>
    </div>

    <div class="form-el">
      <label for="type">Type:</label>
      <input type="text" name="type" id="type"/>
    </div>

    <div class="form-el">
      <label for="distance">Distance:</label>
      <input type="number" name="distance" id="distance"/>
    </div>

     <div class="form-el">
      <label for="country">Country:</label>
      <input type="text" name="country" id="country"/>
    </div>

     <div class="form-el">
      <label for="house_select">Select Oil Company:</label> 
      <select name="oil_company_id" id="oil_company_select">
        <% @oil_companys.each do |house| %>
            <option value=<%= oil_company.id %>><%= oil_company.name.capitalize %></option>
        <% end %>
      </select>
    </div>

    <div class="form-el">
      <input type="submit" value="Add Rig"/>
    </div>

  </div>
</form>











<h1>Record or Book a flight</h1>

<form action="/rigs" method="post">
  <label>
  Select a rig:
    <select name="rig_id">
      <% for rig in @rigs %>
      <option value="<%= rig.id %>"><%= rig.name %></option>
      <% end %>
    </select>
  </label>
  
  <label>
    Select a oil worker:
    <select name="oil_worker_id">
      <% for oil_worker in @oil_workers %>
      <option value="<%= oil_worker.id %>"><%= oil_worker.first_name %> <%= oil_worker.last_name %></option>
      <% end %>
    </select>
  </label>
  
  <input class="btn btn--action" type='submit' value="book">
</form>