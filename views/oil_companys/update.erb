<h2>Update <%= @oil_company.name %></h2>
<form method="POST" action="/oil_companys/<%= @oil_company.id %>">
  <div class="form-wrapper">
    
    <div class="form-el">
      <label for="name">Name:</label>
      <input type="text" name="name" id="name" value="<%= @oil_company.name %>"/>
    </div>

    <div class="form-el">
      <label for="type">Type:</label>
      <input type="text" name="type" id="type" value="<%= @oil_company.type%>"/>
    </div>

    <div class="form-el">
      <input type="submit" value="Update Oil Company"/>
    </div>

  </div>
</form>