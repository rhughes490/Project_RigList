<h1>Flights</h1>

<p class="btn--wrapper">
  <a class="btn btn--action" href="/flights/new">Record a flight</a>
</p>

<ul>
  <% for flight in @flights %>
  <li>
  <p> <%= flight.oil_worker.first_name %> <%= flight.oil_worker.last_name %> has been on the <%= flight.rig.name %> </p>
    <p>
      <form action="/flights/<%= flight.id %>/delete" method="POST">
        <input class="btn btn--danger" type="submit" value="delete" />
      </form>
    </p>
  </li>
  <% end %>
</ul>